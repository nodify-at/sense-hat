{
  "name": "sense-hat2",
  "version": "1.0.0",
  "private": true,
  "description": "Raspberry Pi Sense HAT controller with TypeScript support - monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present --workspaces-concurrency=4",
    "format": "npm run format --workspaces --if-present --workspaces-concurrency=4",
    "lint": "npm run lint --workspaces --if-present --workspaces-concurrency=4"
  },
  "keywords": [
    "sense-hat",
    "raspberry-pi",
    "i2c",
    "sensors",
    "led-matrix"
  ],
  "author": "Hasan Oezdemir <21654050+nodify-at@users.noreply.github.com>",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.8.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.1"
  }

}
