{
  "name": "sense-hat2",
  "version": "1.0.0",
  "description": "Raspberry Pi Sense HAT controller with TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "node dist/index.js"
  },
  "keywords": [
    "sense-hat",
    "raspberry-pi",
    "i2c",
    "sensors",
    "led-matrix"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "i2c-bus": "^5.2.3",
    "onoff": "^6.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
